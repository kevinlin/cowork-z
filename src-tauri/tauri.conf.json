{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cowork-z",
  "version": "0.1.0",
  "identifier": "com.kevinlin.cowork-z",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cowork Z",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/cowork-sidecar"],
    "resources": ["../apps/desktop/skills/*"]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
